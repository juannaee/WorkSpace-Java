package entidades;

public class Produtos {
	public String tipoProduto;
	public Double precoProduto;
	private Integer quantidadeProduto = 0;
	
	
	
	
	
	public void addProduto(Integer valor) {
		this.quantidadeProduto += valor;
		
	}
	public Boolean removeProduto(Integer valor) {
		if(valor > this.quantidadeProduto) {
			System.out.println("NÃ£o tem produtos suficiente a ser removido");
			return false;
		}
		this.quantidadeProduto -= valor;
		return true;
	}
	
	public Double precoTotal() {
		return precoProduto * this.quantidadeProduto;
	}

}
